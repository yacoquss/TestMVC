@{
    ViewData["Title"] = "Регистрация";
}

@model User

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Стили остаются без изменений */
        .container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        .validation-summary-errors {
            color: red;
        }

        .field-validation-error {
            color: red;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
<div class="container">
    <h2>Регистрация</h2>
    <form asp-action="Create" asp-controller="Home" method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <div class="form-group">
            <label asp-for="Name">Имя пользователя:</label>
            <input asp-for="Name" type="text" id="username">
            <span asp-validation-for="Name" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" type="email" id="email">
            <span asp-validation-for="Email" class="field-validation-error"></span>
        </div>

       
        <div class="form-group">
            <label asp-for="Birthday">Дата рождения:</label>
            <input asp-for="Birthday" type="date" id="birthdate">
            <span asp-validation-for="Birthday" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone">Телефон:</label>
            <input asp-for="Phone" type="tel" id="phone" pattern="[0-9]{10}">
            <span asp-validation-for="Phone" class="field-validation-error"></span>
        </div>

        <button type="submit">Зарегистрироваться</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>